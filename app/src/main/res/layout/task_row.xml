<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/main_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/task_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Task 1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/checkBox"/>

            <TextView
                android:id="@+id/task_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/11/2020"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/task_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/task_name_txt" />

            <TextView
                android:id="@+id/task_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:11"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/task_date_txt"
                app:layout_constraintTop_toBottomOf="@+id/task_date_txt" />

            <TextView
                android:id="@+id/task_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="232dp"
                android:layout_marginTop="12dp"
                android:text="1"
                android:textColor="#909090"
                android:textSize="24dp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/task_date_txt"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>